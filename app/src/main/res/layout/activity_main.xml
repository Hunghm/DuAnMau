<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_user"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/emthree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_user"
            android:text="nguoi dung" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_categori"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/linear_user"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_categori"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cateicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_categori"
            android:text="The loai" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_book"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear_user"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/bookicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_book"
            android:text="Sach" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bill"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear_categori"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/linear_book"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_bill"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hdicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoa don" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_book_hot_buy"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear_book"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/img_book_hot_buy"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/money_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sach ban chay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_thong_ke"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/linear_bill"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/linear_book_hot_buy"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_thong_ke"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/thongke" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thong ke" />
    </LinearLayout>

</RelativeLayout>