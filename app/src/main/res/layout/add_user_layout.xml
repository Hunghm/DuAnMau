<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ten dang nhap"
        android:id="@+id/ed_user_name"
        android:layout_marginVertical="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mat khau"
        android:id="@+id/ed_password"
        android:layout_marginVertical="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhap lai mat khau"
        android:id="@+id/ed_repassword"
        android:layout_marginVertical="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="So dien thoai"
        android:inputType="number"
        android:id="@+id/ed_phone_number"
        android:layout_marginVertical="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ho va ten"
        android:id="@+id/ed_full_name"
        android:layout_marginVertical="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <Button
            android:id="@+id/btn_them"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Them"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Huy"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_list_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh Sach Nguoi Dung"
        android:layout_marginTop="10dp"
        />
</LinearLayout>